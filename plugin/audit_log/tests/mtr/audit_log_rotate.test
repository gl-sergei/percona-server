--source include/not_embedded.inc

let $MYSQLD_DATADIR= `select @@datadir`;
let MYSQLD_DATADIR= $MYSQLD_DATADIR;

--disable_result_log
--disable_query_log
--source ../plugin/audit_log/tests/mtr/audit_log_events.inc
--source ../plugin/audit_log/tests/mtr/audit_log_events.inc
--source ../plugin/audit_log/tests/mtr/audit_log_events.inc
--source ../plugin/audit_log/tests/mtr/audit_log_events.inc
--enable_query_log
--enable_result_log

perl;
  eval "use JSON qw(decode_json); 1" or exit 0;
  my @files = glob ($ENV{'MYSQLD_DATADIR'} . "/test_audit.log.[0-9][0-9]");
  foreach (@files) {
    open my $file, $_ or die "Could not open log: $!";
    while (my $line = <$file>) {
        decode_json($line);
    }
    close $file;
  }
  die "Rotation doesn't work!" unless scalar(@files) > 1
EOF
--remove_files_wildcard $MYSQLD_DATADIR test_audit.log*

--echo success

SET @rotate_size = @@audit_log_rotate_on_size;
SET @rotate_count = @@audit_log_rotations;

SET GLOBAL audit_log_rotate_on_size=0;
SET GLOBAL audit_log_rotations=0;
SET GLOBAL audit_log_rotate_on_size=524288000;
SET GLOBAL audit_log_flush = ON;

SET GLOBAL audit_log_rotate_on_size = @rotate_size;
SET GLOBAL audit_log_rotations = @rotate_count;
